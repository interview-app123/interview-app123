<h1><%= @member.name %></h1>
<p><%= @member.url %></p>
<p><%= @member.full_url %></p>

<% @h1_contents.each do |h1_content| %>
  <h1><%= h1_content %></h1>
<% end %>

<% @h2_contents.each do |h2_content| %>
  <h2><%= h2_content %></h2>
<% end %>

<% @h3_contents.each do |h3_content| %>
  <h3><%= h3_content %></h3>
<% end %>

<hr>

<h2>Friends</h2>
<%= form_tag member_friendships_path(@member) do %>
  <% if flash[:error] %>
    <div><%= flash[:error] %></div>
  <% end %>
  <%= number_field_tag(:id) %>
  <%= submit_tag 'Add friend' %>
<% end %>
<% @friends.each do |friend| %>
  <%= link_to  friend.name, member_path(friend) %>
<% end %>

<hr>

<h2>Search for experts</h2>
<%= form_tag member_search_index_path(@member), method: 'GET' do %>
  <%= text_field_tag(:query) %>
  <%= submit_tag 'Search' %>
<% end %>
